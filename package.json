{
  "name": "eleven-lingo-monorepo",
  "private": false,
  "scripts": {
    "dev:minecraft": "pnpm --filter minecraft-gamer dev",
    "dev:frontend": "pnpm --filter frontend dev",
    "dev": "concurrently \"pnpm dev:minecraft\" \"pnpm dev:frontend\"",
    "build:frontend": "pnpm --filter frontend build",
    "start:frontend": "pnpm --filter frontend start"
  },
  "workspaces": [
    "agents/*",
    "frontend"
  ],
  "devDependencies": {
    "concurrently": "^9.1.0"
  }
}
